{
  "description": "Catalogue to showcase RHI's web components",
  "author": "RHI Tech",
  "dependencies": {
    "@rhi-isncsci-ui/mobile-totals": "^1.0.4",
    "@rhi-ui/demo-snippet": "^1.1.0",
    "@rhi-ui/html": "^1.0.6",
    "@rhi-ui/logo": "^1.1.2",
    "@rhi-ui/markdown-viewer": "^1.1.0",
    "@rhi-ui/selectable-grid": "^1.1.1",
    "@webcomponents/webcomponentsjs": "^2.0.0",
    "highlight.js": "^9.12.0",
    "markdown-it": "^8.4.2"
  },
  "devDependencies": {
    "cpx": "^1.5.0",
    "express": "^4.16.3",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-typescript2": "^0.17.0",
    "typescript": "^3.1.1"
  },
  "engines": {
    "node": ">=8.0"
  },
  "license": "Apache-2.0",
  "name": "rhi-web-components-catalogue",
  "private": true,
  "repository": "https://github.com/rick-hansen-institute/web-components-catalogue.git",
  "scripts": {
    "build": "rollup -c ./rollup.config.js",
    "build:current": "npm link E:\\rhi-isncsci\\ui\\packages\\@rhi-isncsci-ui\\mobile-sensory && rollup -c ./rollup.config.js && npm run postbuild:rhi-isncsci-ms",
    "postbuild": "npm run postbuild:rhi-ui",
    "postbuild:rhi-ui": "npm run postbuild:resources && npm run postbuild:rhi-ui-ds && npm run postbuild:rhi-ui-logo && npm run postbuild:rhi-ui-mdv && npm run postbuild:rhi-ui-sg",
    "postbuild:resources": "cpx ./index.html dist && cpx ./src/resources/**/* dist && cpx ./node_modules/@webcomponents/webcomponentsjs/webcomponents-loader.js ./dist/node_modules/@webcomponents/webcomponentsjs",
    "postbuild:rhi-ui-ds": "cpx ./node_modules/@rhi-ui/demo-snippet/README.md dist/node_modules/@rhi-ui/demo-snippet/",
    "postbuild:rhi-ui-logo": "cpx ./node_modules/@rhi-ui/logo/README.md dist/node_modules/@rhi-ui/logo/",
    "postbuild:rhi-ui-mdv": "cpx ./node_modules/@rhi-ui/markdown-viewer/README.md dist/node_modules/@rhi-ui/markdown-viewer/",
    "postbuild:rhi-ui-sg": "cpx ./node_modules/@rhi-ui/selectable-grid/README.md dist/node_modules/@rhi-ui/selectable-grid/",
    "postbuild:rhi-isncsci-ms": "cpx ./node_modules/@rhi-isncsci-ui/mobile-sensory/README.md dist/node_modules/@rhi-isncsci-ui/mobile-sensory/",
    "start": "node server.js"
  },
  "version": "4.0.0"
}
